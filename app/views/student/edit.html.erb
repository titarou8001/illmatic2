<h1>編集</h1>
<table>
    <%= form_for(@student, url:{controller:'student', action:'update', id:@student.id}) do |form| %>
    <tr>
        <th>学生番号</th>
        <td><%= form.text_field :student_no %></td>   
    </tr>
    <tr>
        <th>クラス</th>
        <td><%= form.text_field :k_class %></td>   
    </tr>
    <tr>
        <th>番号</th>
        <td><%= form.text_field :number %></td>   
    </tr>
    <tr>
        <th>名前</th>
        <td><%= form.text_field :name %></td>   
    </tr>
    <tr>
        <th>パスワード</th>
        <td><%= form.text_field :password_digest %></td>   
    </tr>
    <tr>
        <th></th>
        <td><%= form.submit "変更" %></td>   
    </tr>
    <% end %>
</table>
